{
  "name": "arx-convert",
  "version": "10.1.1",
  "description": "Converts various Arx Fatalis formats to JSON or YAML and back",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=18.0.0"
  },
  "bin": {
    "arx-convert": "dist/bin/convert.js"
  },
  "exports": {
    ".": {
      "default": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./utils": {
      "default": "./dist/utils.js",
      "types": "./dist/utils.d.ts"
    },
    "./types": {
      "default": "./dist/types.js",
      "types": "./dist/types.d.ts"
    }
  },
  "scripts": {
    "build": "tsc && tsc-alias",
    "lint": "xo",
    "lint:watch": "nodemon --watch src --exec \"npm run lint\" --ext ts",
    "prepublishOnly": "npm run lint && rm -rf dist && rm tsconfig.tsbuildinfo && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arx-tools/arx-convert.git"
  },
  "author": "Lajos Meszaros <m_lajos@hotmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/arx-tools/arx-convert/issues"
  },
  "homepage": "https://github.com/arx-tools/arx-convert#readme",
  "dependencies": {
    "minimist-lite": "^2.2.1",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "^20.8.10",
    "eslint-plugin-unused-imports": "^4.1.4",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.2.2",
    "xo": "^0.59.2"
  },
  "keywords": [
    "arx-fatalis"
  ]
}
